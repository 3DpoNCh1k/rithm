      "std": "c++17",
      "always": "-I . -Wall -Wextra -Wshadow",
      "profiles": {
        "fast": "",
        "debug": ""
      },
      "localDebug": "-DLOCAL_DEBUG"
    }
  },
  "debug": {
    "compiler": "g++",
    "options": "-I ."
  }
}
